@using Juan.Models
@using Juan.Controllers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="display:flex;justify-content:space-between;align-items:center">
<h1>Slider:</h1>
<a asp-action="create" asp-controller="slider" class="btn btn-success" >Create</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title1</th>
      <th scope="col">Title2</th>
      <th scope="col">RedricetUrl</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
        @foreach (Slider item in Model)
        {
        <tr>
          <td>@item.Title1</td>
          <td>@item.Title2</td>
          <td>@item.RedirectUrl</td>
          <td>
                  <img style="width:150px" src="~/upload/sliders/@item.Image">
          </td>
          <td>
                  <a asp-action="update" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-info" >Update</a>
                  <a asp-action="delete" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-danger item-delete" >Delete</a>
              </td>
        </tr>
        }

  </tbody>
</table>

